<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="16dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_progress_item"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/progress"
        />
    <TextView
        android:id="@+id/tv_title_progress_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:padding="2dp"
        android:gravity="start"
        android:text="Pasosync Analytics"
        android:textColor="#4C4B4B"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/tv_readmore_progress_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:padding="2dp"
        android:text="@string/about_profile"
        android:textAlignment="textStart"
        android:textColor="#7B8788"
        android:textSize="14sp"

        app:colorClickableText="@color/dark_orange"
        app:trimCollapsedText="read less"
        app:trimExpandedText="read more"
        app:trimLength="140"
        app:trimMode="trimModeLength" />
    <TextView
        android:id="@+id/tv_date_progress_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:padding="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="start"
        android:text="12/06/20"
        android:textColor="#4C4B4B"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_share_progress_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:drawableStart="@drawable/ic_baseline_share_24"
        android:padding="2dp"
        android:layout_marginBottom="4dp"
       android:layout_gravity="end"
        android:text="Share"
        android:textColor="#4C4B4B"
        android:textSize="18sp"
        android:textStyle="bold"
        />



</LinearLayout>


</androidx.cardview.widget.CardView>