<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:padding="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_all_lecture_list_item"
            android:src="@drawable/coach"
            android:layout_width="match_parent"
            android:layout_height="175dp"/>

        <TextView

            android:id="@+id/tv_all_title_lecture_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:gravity="start"
            android:padding="4dp"
            android:text="Pasosync Analytics"
            android:textColor="#4C4B4B"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView

            android:id="@+id/tv_all_description_lecture_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:gravity="start"
            android:maxLines="3"
            android:padding="4dp"
            android:text="@string/about_profile"

            android:textColor="#4C4B4B"
            android:textSize="14sp"/>

        <TextView

            android:id="@+id/tv_all_lecture_list_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:gravity="start"
            android:padding="4dp"
            android:text="Pasosync Analytics"
            android:textColor="#A56609"
            android:textSize="16sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/all_lecture_coach_profile_pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="2dp"
                android:src="@drawable/man"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:civ_border_width="1dp"
                />
            <TextView
                android:id="@+id/tv_all_lecture_coach_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:padding="2dp"
                android:textStyle="bold"
                android:text="created by this"
                android:textAllCaps="false"
                android:textColor="#4C4B4B"
                android:textSize="16sp"
                />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="4dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:src="@drawable/today" />

            <TextView
                android:id="@+id/tv_all_date_lecture_list_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_weight="80"
                android:textStyle="bold"
                android:textColor="#4C4B4B"
                android:layout_marginLeft="4dp"
                android:text="22/2/20" />

            <TextView
                android:id="@+id/lecture_list_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="50"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="6dp"
                android:padding="2dp"
                android:textStyle="bold"
                android:text="Learn now"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="20sp"
                />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>